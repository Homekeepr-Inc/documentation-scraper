# Squid configuration template rendered per container

http_port 8888

${CACHE_PEER_CONFIG}

never_direct allow all

# Access control
acl localnet src 127.0.0.1
acl localnet src 172.16.0.0/12
acl localnet src 10.0.0.0/8
acl localnet src 192.168.0.0/16
http_access allow localnet
http_access deny all

# Logging disabled (avoid leaking target URLs)
access_log none
cache_log none

# Disable caching
cache deny all
